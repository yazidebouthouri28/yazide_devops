pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                sh 'echo Building...'
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'echo Running tests...'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            when {
                branch "main"
            }
            steps {
                sh 'echo Deploying to server...'
                sh 'scp target/app.jar user@server:/opt/app/'
            }
        }

    }
}
